// Example turn-based game from "Infinite Games - Lecture Notes"
// by Martin Zimmermann and Felix Klein

player P0 [a1], [b1] endplayer
player P1 [a2], [b2], [c2] endplayer

module M

s:[0..8];

// P0:
[a1] s=1 -> (s'=0);
[b1] s=1 -> (s'=2);
[a1] s=3 -> (s'=4);
[b1] s=3 -> (s'=6);
[a1] s=7 -> (s'=6);
[b1] s=7 -> (s'=8);
[a1] s=8 -> (s'=5);

// P1:
[a2] s=0 -> (s'=1);
[b2] s=0 -> (s'=3);
[a2] s=2 -> (s'=1);
[b2] s=2 -> (s'=5);
[a2] s=4 -> (s'=0);
[b2] s=4 -> (s'=7);
[c2] s=4 -> (s'=8);
[a2] s=5 -> (s'=1);
[b2] s=5 -> (s'=7);
[a2] s=6 -> (s'=7);

endmodule
